{
    "name": "roaresearch/composer-utils",
    "description": "Classes that helps using composer on libraries and projects",
    "keywords": [
        "composer"
    ],
    "type": "library",
    "license": "BSD-3-Clause",
    "homepage": "https://github.com/ROAResearch/composer-utils",
    "authors": [
        {
            "name": "Angel (Faryshta) Guevara",
            "email": "angeldelcaos@gmail.com",
            "homepage": "https://github.com/Faryshta",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~8.1"
    },
    "scripts": {
        "configDB": "roaresearch\\composer\\utils\\DBListener::config",
        "blankDB": "roaresearch\\composer\\utils\\DBListener::blankConfig",
        "tests": [
            "@blankDB dbuser=s3cr3t dbpass=s3cr3t dbname=s3cr3t",
            "cat tests.php",
            "@blankDB",
            "cat tests.php",
            "@configDB",
            "cat tests.php"
        ]
    },
    "require-dev": {
    },
    "extra": {
        "utilConfig": {
            "dbname": "composer_utils_test",
            "dbtpls": {
                "tests.php": "roaresearch\\composer\\utils\\VarDBTPL"
            }
        }
    },
    "autoload": {
        "psr-4": {
            "roaresearch\\composer\\utils\\": "src"
        }
    }
}
